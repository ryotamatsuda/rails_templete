<h1>User Show</h1>
<h2>user name</h2>
<%= @user.name %>
<h2>user email</h2>
<%= @user.email %>
<h2>user tweets</h2>
<table>
  <thead>
    <tr>
      <th>content</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.tweets.each do |tweet| %>
    <tr>
      <td><%= tweet.content %></td>
      <td><%= link_to "Show", tweet_path(tweet.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= render 'tweets/new_tweet_form' %>
