<h1>User Index</h1>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>email</th>
      <th>tweet count</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @all_users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.tweets.count %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= render 'tweets/new_tweet_form' %>
